{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "spoke1VnetName": {
            "defaultValue": "Spoke1_Vnet",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 1 Vnet"
            }
        },
        "spoke2VnetName": {
            "defaultValue": "Spoke2_Vnet",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 2 Vnet"
            }
			
        },
		"spoke3VnetName": {
            "defaultValue": "Spoke3_Vnet",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 3 Vnet"
            }
		},
		"spoke4VnetName": {
            "defaultValue": "Spoke4_Vnet",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 4 Vnet"
            }
		},
		"spoke5VnetName": {
            "defaultValue": "Spoke5_Vnet",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 5 Vnet"
            }
		},
        "hubVnetName": {
            "defaultValue": "Hub_VNet",
            "type": "string",
            "metadata": {
                "description": "Name of the hub Vnet"
            }
        },
		
        "spoke1RGName": {
            "defaultValue": "VDC-Spoke1",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 1 resource group"
            }
        },
		 "spoke2RGName": {
            "defaultValue": "VDC-Spoke2",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 2 resource group"
            }
        },
		 "spoke3RGName": {
            "defaultValue": "VDC-Spoke3",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 3 resource group"
            }
        },
		 "spoke4RGName": {
            "defaultValue": "VDC-Spoke4",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 4 resource group"
            }
        },
        "spoke5RGName": {
            "defaultValue": "VDC-Spoke5",
            "type": "string",
            "metadata": {
                "description": "Name of the spoke 5 resource group"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "name": "[concat(parameters('hubVnetName'), '/to-', parameters('spoke1VnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": true,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId(parameters('spoke1RGName'), 'Microsoft.Network/virtualNetworks', parameters('spoke1VnetName'))]"
                }
            }
        },
		{
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "name": "[concat(parameters('hubVnetName'), '/to-', parameters('spoke2VnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": true,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId(parameters('spoke1RGName'), 'Microsoft.Network/virtualNetworks', parameters('spoke2VnetName'))]"
                }
            }
        },
		{
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "name": "[concat(parameters('hubVnetName'), '/to-', parameters('spoke3VnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": true,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId(parameters('spoke1RGName'), 'Microsoft.Network/virtualNetworks', parameters('spoke3VnetName'))]"
                }
            }
        },
		{
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "name": "[concat(parameters('hubVnetName'), '/to-', parameters('spoke4VnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": true,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId(parameters('spoke1RGName'), 'Microsoft.Network/virtualNetworks', parameters('spoke4VnetName'))]"
                }
            }
        },
        {
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "name": "[concat(parameters('hubVnetName'), '/to-', parameters('spoke5VnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": true,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId(parameters('spoke2RGName'), 'Microsoft.Network/virtualNetworks', parameters('spoke5VnetName'))]"
                }
            }
        }
    ]
}